generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Parts{
  id          String    @id @default(cuid())
  name        String
  description String?
  category    String
  price       Float
  year        Int       @default(2025)
  make       String?
  model       String?
  type        String?
  stock       Int       @default(0)
  location    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String
  imageUrl    String?
}